from pygame import *
font.init()
from random import *
from time import time as timer

window = display.set_mode((1200,720))
display.set_caption("pinpong")
background = transform.scale(image.load("1615820031_12-p-fon-rassvet-16.jpg"), (1200,720))
clock = time.Clock()
FPS = 60
game = True
while game == True:
    for e in event.get():
        if e.type == QUIT:
            game = False
    window.blit(background,(0,0))
    display.update()
    time.delay(50)